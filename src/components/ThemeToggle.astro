---
// Theme Toggle Component - Switch between light and dark mode
---

<button id="theme-toggle" class="theme-toggle-button" aria-label="Toggle theme" title="Cambiar tema">
    <svg class="sun-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="5"/>
        <line x1="12" y1="1" x2="12" y2="3"/>
        <line x1="12" y1="21" x2="12" y2="23"/>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
        <line x1="1" y1="12" x2="3" y2="12"/>
        <line x1="21" y1="12" x2="23" y2="12"/>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
    </svg>
    <svg class="moon-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
    </svg>
</button>

<style>
    .theme-toggle-button {
        position: relative;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: 2px solid var(--bringer-s-border);
        background: var(--bringer-s-container-bg);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        margin-left: 1rem;
    }

    .theme-toggle-button:hover {
        border-color: var(--bringer-s-accent);
        transform: rotate(15deg) scale(1.1);
    }

    .theme-toggle-button svg {
        position: absolute;
        transition: all 0.3s ease;
        color: var(--bringer-s-heading);
    }

    .sun-icon {
        opacity: 0;
        transform: rotate(-90deg) scale(0.5);
    }

    .moon-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    :global(html.light-mode) .sun-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    :global(html.light-mode) .moon-icon {
        opacity: 0;
        transform: rotate(90deg) scale(0.5);
    }

    @media (max-width: 959px) {
        .theme-toggle-button {
            width: 40px;
            height: 40px;
        }
    }
</style>

<script is:inline>
    // Theme Toggle Logic
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;

    // Check for saved theme preference or default to 'dark'
    const currentTheme = localStorage.getItem('theme') || 'dark';
    
    if (currentTheme === 'light') {
        html.classList.add('light-mode');
    }

    themeToggle?.addEventListener('click', () => {
        html.classList.toggle('light-mode');
        
        const newTheme = html.classList.contains('light-mode') ? 'light' : 'dark';
        localStorage.setItem('theme', newTheme);
        
        // Trigger animation
        themeToggle.style.transform = 'rotate(360deg) scale(1.2)';
        setTimeout(() => {
            themeToggle.style.transform = '';
        }, 300);
    });
</script>
